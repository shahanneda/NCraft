cmake_minimum_required(VERSION 3.10)

project(NCraft)

set(CMAKE_CXX_STANDARD 11)
set(CMAKE_CXX_STANDARD_REQUIRED True)

set(CMAKE_BINARY_DIR ${CMAKE_SOURCE_DIR}/bin)

set(EXECUTABLE_OUTPUT_PATH ${CMAKE_BINARY_DIR})
set(LIBRARY_OUTPUT_PATH ${CMAKE_BINARY_DIR})


ADD_LIBRARY(NCraft 
  ${CMAKE_SOURCE_DIR}/src/main.cpp
)

# set(srcs 
#   src/NCraftWindow.cpp
#   src/inc/NCraftMain.h
#   src/inc/NCraftWindow.h
# )

file(GLOB srcs
    "src/*.h"
    "src/*.cpp"
    # "src/inc/*.h"
)

# target_include_directories(NCraft PRIVATE ${CMAKE_SOURCE_DIR}/src/inc/)

# GLFW
set(GLFW_BUILD_DOCS OFF CACHE BOOL "" FORCE)
set(GLFW_BUILD_TESTS OFF CACHE BOOL "" FORCE)
set(GLFW_BUILD_EXAMPLES OFF CACHE BOOL "" FORCE)

add_subdirectory(${CMAKE_SOURCE_DIR}/glfw)

include_directories(${CMAKE_SOURCE_DIR}/glfw/include)
target_link_libraries(NCraft glfw)
target_link_libraries(NCraft ${GLFW3_LIBRARY})

# include_directories(${CMAKE_SOURCE_DIR}/glad/include/khr)

find_package(OpenGL REQUIRED)
target_link_libraries(NCraft OpenGL::GL)




include_directories(glad/include/)



# glad
add_library("glad" "glad/src/gl.c")
target_include_directories("glad" PRIVATE "glad/include/glad")
target_include_directories("glad" PRIVATE "glad/include/KHR")
target_include_directories(NCraft PRIVATE "glad/include/glad")
target_include_directories(NCraft PRIVATE "glad/include/khr")
target_link_libraries(NCraft "glad" "${CMAKE_DL_LIBS}")


add_executable(NCraftExe ${CMAKE_SOURCE_DIR}/src/main.cpp ${srcs} )
target_link_libraries(NCraftExe NCraft)

